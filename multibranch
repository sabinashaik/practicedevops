pipeline {
    agent any

    environment {
        JAVA_HOME = "/opt/jdk21"
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Building branch: ${env.BRANCH_NAME}"
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'javac HelloWorld.java'
            }
        }

        stage('Run') {
            steps {
                sh 'java HelloWorld'
            }
        }

        stage('Branch Logic') {
            when {
                anyOf {
                    branch 'main'
                    branch 'dev'
                }
            }
            steps {
                echo "This stage runs only for main or dev branch"
            }
        }
    }

    post {
        success {
            echo "Build SUCCESS on branch ${env.BRANCH_NAME}"
        }
        failure {
            echo "Build FAILED on branch ${env.BRANCH_NAME}"
        }
    }
}
