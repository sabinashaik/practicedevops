pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning GitHub repository...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Compiling Java application...'
               sh 'javac HelloWorld.java'
            }
        }
         stage('Run Java Program') {
            steps {
                echo 'Running Java application...'
                sh 'java HelloWorld'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}
