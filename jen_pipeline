pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning GitHub repository...'
            }
        }

        stage('Build') {
            steps {
                echo 'Building Java application...'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing application...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}
